<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Tasks" Height="650" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="[ Employee Name ]"
               FontSize="24" FontWeight="Bold"
               Grid.Row="0" Margin="0 10 0 0"
               HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label Content="Pending / In Progress"
               FontSize="24" FontWeight="Bold"
               Margin="25 10 0 0"
               Grid.Row="1" Grid.Column="1"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Background="#FF30B3B3"/>

        <Grid Grid.Row="1" Margin="25,77,0,43" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="129.834"/>
                <ColumnDefinition Width="70.166"/>
            </Grid.ColumnDefinitions>

            <!-- Headers -->
            <Border BorderThickness="5 5 5 0" BorderBrush="Black" Width="100" Padding="5">
                <TextBlock Text="TaskId" FontSize="25" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Column="1" BorderThickness="0 5 5 0" BorderBrush="Black" Width="120" Padding="5">
                <TextBlock Text="Title" FontSize="25" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Column="2" BorderThickness="0 5 0 0" BorderBrush="Black" Width="400" Padding="5">
                <TextBlock Text="Description" FontSize="25" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Column="4" Grid.ColumnSpan="2" BorderThickness="5" BorderBrush="Black" Width="200" Padding="5">
                <TextBlock Text="Status" FontSize="25" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Task 101 -->
            <Border Grid.Row="1" BorderThickness="5 0 5 0" BorderBrush="Black" Width="100" Margin="0,10" Padding="5">
                <TextBlock Text="101" FontSize="25" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" BorderThickness="0 0 5 0" BorderBrush="Black" Width="120" Margin="0,10" Padding="5">
                <TextBlock Text="Frontend" FontSize="25" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Row="1" Grid.Column="2" BorderThickness="0 0 0 0" BorderBrush="Black" Width="400" Margin="0,10" Padding="5">
                <TextBlock Text="Finish the login page" FontSize="25" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Row="1" Grid.Column="3" BorderThickness="0 0 0 0" BorderBrush="Black" Margin="0,10,49,10" Padding="5">
                <TextBlock Text="Pinding" FontSize="25" FontWeight="Bold"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Task 102 -->
            <Border Grid.Row="2" BorderThickness="5 0 5 5" BorderBrush="Black" Width="100" Margin="0,10" Padding="5">
                <TextBlock Text="102" FontSize="25" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Row="2" Grid.Column="1" BorderThickness="0 0 5 5" BorderBrush="Black" Width="120" Margin="0,10" Padding="5">
                <TextBlock Text="Backend" FontSize="25" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Row="2" Grid.Column="2" BorderThickness="0 0 0 5" BorderBrush="Black" Width="400" Margin="0,10" Padding="5">
                <TextBlock Text="Add the payment service" FontSize="25" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>
